<div class="content-row">
      <div class="col-lg-offset-1 col-lg-10 embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://player.vimeo.com/video/201633032" frameborder="0" allowfullscreen=""></iframe>
      </div>
    </div>

<section>
  <div id="carouselTestimonialIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselTestimonialIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselTestimonialIndicators" data-slide-to="1"></li>
      <li data-target="#carouselTestimonialIndicators" data-slide-to="2"></li>
      <li data-target="#carouselTestimonialIndicators" data-slide-to="3"></li>
      <li data-target="#carouselTestimonialIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <%= @reviews.each do |review| %>
      <div class="carousel-item active">
        <img class="d-block img-fluid" src="http://www.hmacdonaldinsurance.com/wp-content/uploads/2015/09/Testimonial.jpg" alt="First slide" style="height:500px">
          <div class="carousel-caption d-none d-md-block">
            <h3><%= review.reviewer %></h3>
            <p><%= review.review %></p>
          </div>
      </div>
      <% end %>
    <a class="carousel-control-prev" href="#carouselTestimonialIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselTestimonialIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>
