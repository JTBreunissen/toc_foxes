<section>
  <h1 style="text-align:center;">Proudly supported by</h1>
  <div class="container">
    <div class="row">
      <% @sponsors.each do |sponsor| %>
      <div class="col-sm-4">
        <div class="container">
          <div class="row">
            <div class="col-sm-2">
              <%= image_tag(sponsor.logo) %>
            </div>
            <div class="col-sm-10">
              <p><%= sponsor.company_name %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
