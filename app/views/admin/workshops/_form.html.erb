<%= form_for @workshop do |f| %>

  <% @workshop.errors.full_messages.each do |error| %>
    <p class="alert alert-danger" role="alert"><%= error %></p>
  <% end %>

  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, placeholder: "Title", class: "form-control"%>
  </div>

  <div class="form-group">
    <label>Description</label>
  <%= f.text_field :description, placeholder: "Description", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Image</label>
    <%= f.text_field :image, placeholder: "Image", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Live Demo</label>
    <%= f.text_field :link_to_live_demo, placeholder: "Live Demo", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>GitHub Link</label>
    <%= f.text_field :link_to_github, placeholder: "GitHub Link", class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit (@workshop.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
  </div>
<% end %>
