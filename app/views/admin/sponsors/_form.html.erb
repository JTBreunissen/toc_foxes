<%= form_for([:admin, @sponsor]) do |f| %>

  <% @sponsor.errors.full_messages.each do |error| %>
    <p class="alert alert-danger" role="alert"><%= error %></p>
  <% end %>

  <div class="form-group">
    <label>Company name</label>
    <%= f.text_field :company_name, placeholder: "Company name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Url to company logo</label>
    <%= f.text_field :logo, placeholder: "URL", class: "form-control" %>
  </div>

  <div class="actions">
    <p align="right"> <%= f.submit "Save", class: "btn btn-primary" %></p>
 </div>
<% end %>
