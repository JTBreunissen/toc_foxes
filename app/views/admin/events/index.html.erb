<%= render "shared/sidebar" %>
<div class="container">
  <div class="row">
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>"Current TOC events"</h3>
      </div>
      <div class="panel-body">
        <div class="container">
          <div class="row">
            <% @events.each do |event| %>
            <div class="col-md-7">
              <h4><%= link_to event.title, admin_event_url(event) %></h4><hr>
            </div>
            <div class="col-md-3 right">
              <%= link_to "View", admin_event_path(event), class: "btn btn-default" %>
              <%= link_to "Edit", edit_admin_event_path(event), class: "btn btn-default" %>
              <%= link_to "Delete", admin_event_path(event), class: "btn btn-default", :confirm => "Are you sure?", :method => :delete %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>"Add new event"</h3>
      </div>
      <div class="panel-body">
        <div class="container">
          <div class="row">
            <%= link_to "New event", new_admin_event_url, class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
