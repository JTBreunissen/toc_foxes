<div class="form-group">
<%= form_for([:admin, @event]) do |f| %>
</div>

<% @event.errors.full_messages.each do |error| %>
  <p class="alert alert-danger" role="alert"><%= error %></p>
<% end %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
<div class="form-group">
  <%= f.label :location %>
  <%= f.text_field :location %>
  </div>

<div class="form-group">
  <%= f.label :spaces_available %>
  <%= f.number_field :spaces_available %>
  </div>

<div class="form-group">
  <%= f.label :date %>
  <%= f.date_select :date %>
  </div>

<div class="form-group">
  <%= f.label :public %>
  <%= f.check_box :public %>
  </div>

<div class="actions">
  <p> <%= f.submit "Save", class: "btn btn-primary" %></p>
<% end %>
